generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../erd.png"
  theme    = "forest"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public", "auth"]
}

model User {
  id             String         @id
  name           String         @default("anoymous") @db.VarChar(30)
  bio            String?
  email          String         @unique
  imageurl       String?         
  holdingEvents  Events[]
  EventSchedules Participants[]
  chats          Chats[]
  @@schema("auth")
}

model Events {
  id             Int            @id @default(autoincrement())
  title          String         @default("無名のイベント") @db.VarChar(50)
  description    String?
  holderId       String
  createdAt      DateTime       @default(now())
  candidates     DateTime[]
  holder         User           @relation(fields: [holderId], references: [id])
  eventSchedules Participants[]
  chats          Chats[]

  @@schema("public")
}

model Participants {
  id       Int      @id @default(autoincrement())
  userId   String
  abscence String[] @default([])
  remarks  String?  @default("備考なし")
  eventId  Int
  event    Events   @relation(fields: [eventId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@schema("public")
}

model Chats {
  id        Int      @id @default(autoincrement())
  eventId   Int
  userId    String
  message   String
  createdAt DateTime @default(now())
  event     Events   @relation(fields: [eventId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@schema("public")
  @@index([eventId])
}