generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output = "../erd.png"
  theme = "forest"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name  String @db.VarChar(30) @default("anoymous")
  bio String?
  email     String   @unique
  password  String
  holdingEvents Events[]
  EventSchedules Participants[]
}

model Events {
  id        Int      @id @default(autoincrement())
  title    String  @db.VarChar(50) @default("無名のイベント")
  description String?
  holder User @relation(fields: [holderId], references: [id])
  holderId Int
  createdAt DateTime @default(now())
  candidates DateTime[]
  eventSchedules Participants[]
}

model Participants {
  id       Int      @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  abscence String[] @default([])
  remarks String? @default("備考なし")
  event Events @relation(fields: [eventId], references: [id])
  eventId Int
}